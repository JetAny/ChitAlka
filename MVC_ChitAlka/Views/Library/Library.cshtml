<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Library</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  @model dynamic
              <body>
                  @{
                      ViewData["Title"] = "Общая библиотека";
                    }
                        <h1>@ViewData["Title"]</h1> 
                    <div class="container text-center">
                      <div class="row border btn-primary disabled">
                        <div class="col-4">
                          Автор
                        </div>
                        <div class="col-4">
                          Название
                        </div>
                        <div class="col-2">
                          Жанр
                        </div>
                      </div>
                    </div> 
                    <div class="container text-center ">
                      <div class="row border">
                          @foreach (var author in Model.Author )
                          {
                              <div class="col-4 ">
                                  @author.FirstName
                                  @author.LastName
                              </div>
                              @foreach (var book in author.BookModel )
                                {
                                    <div class="col-4 ">
                                      @book.Name
                                    </div>
                                    <div class="col-2 ">
                                      @book.Genre
                                    </div>
                                    <div class="col-1 btn btn-outline-success"> 
                                      <a href="~/Library/BookPage/?BookId=@book.Id">Выбрать</a>
                                    </div>
                                    <div class="col-1 btn btn-outline-danger"> 
                                      <a href="~/Library/BookDelete/?BookId=@book.Id">Удалить</a>
                                    </div>
                                }
                          }
                      </div>
                    </div> 
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
             </body>
</html>