<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ReadBook</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
 @* @model dynamic*@
  @model List<SectionModel>
  <body>
    <div class="container  border">
      <div class="row border btn-light disabled">
          @foreach (var item in Model)
          {
              <div class="col-12 text-center ">
                @item.Counter
              </div> 
              <div class="col-12 text-center ">
                @item.Title
              </div> 
              <div class="col-12 text-center ">
                @item.Text
              </div> 
              <div class="col-4 text-center ">
                 <div class="btn-group">    
 
                  <a href="~/Library/ReadBook/?bookId=@item.BookModelId&fl=@false" class="btn btn-light">Назад</a>

                  <a href="~/Library/ReadBook/?bookId=@item.BookModelId&fl=@true" class="btn btn-light">Вперед</a>

               </div>
              </div>
          }
      </div>
    </div> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>