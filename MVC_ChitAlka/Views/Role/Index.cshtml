

@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}
  
<h1 class="bg-info text-white">All Roles</h1>
<a asp-action="Create" class="btn btn-secondary">Create a Role</a>
  
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <form action="/Role/DeleteRole" method="post">
                <input type="hidden" name="delRole" value=@role.Id>
                <td><button type="submit" class="btn btn-primary">Удалить роль</button></td>
            </form>
        </tr>
    }
</table>

