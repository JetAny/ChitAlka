<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BookPage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  @model dynamic
      <body>
          <div class="container text-center border">
            <div class="card" style="width: 18rem;">
              <img src=https://st.depositphotos.com/1500858/2324/i/450/depositphotos_23242228-stock-photo-open-book-with-green-nature.jpg class="card-img-top" alt="...">
             
              <div class="card-body">
                <h5 class="card-title">@Model.Book.Name</h5>
                <p class="card-text">@Model.Book.Description</p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">@Model.Book.AuthorModel.FirstName</li>
                <li class="list-group-item">@Model.Book.Genre</li>
                <li class="list-group-item">A third item</li>
              </ul>
              <div class="card-body">
                <a href="~/Login/ReadBook/?bookId=@Model.Book.Id&secId=1" class="card-link">Читать</a>
                <a href="~/Login/Library" class="card-link">Назад</a>
              </div>
            </div>
         </div>
